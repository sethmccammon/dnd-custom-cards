card field:
	type: text
	name: itemname
	identifying: true
	show statistics: false
	card list visible: true
	card list column: 1
	card list width: 150
	description: The name of the card

card field:
	type: text
	name: itemtext
	description: Item Text
	multi line: true

card field:
	type: text
	name: itemtypeline
	description: Item Typeline

card field:
	type: image
	name: itemimage
	show statistics: false
	description: The image of the card

card field:
	type: text
	name: card number
	save value: false
	script:
		position(
			of: card
			in: set
			order_by: { sort_name(card.itemname) }
		) + 1
		+ "/" +
		number_of_items(in: set)
	card list visible: true
	card list column: 10
	card list width: 50
	card list name: #
	editable: false
	show statistics: false