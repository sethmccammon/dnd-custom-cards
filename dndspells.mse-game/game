mse version: 0.1.1

short name: dndspells
full name: dndspells
icon: icon.png
position hint: 26

version: 2019-11-03


init script:
	# Process the name for sorting rules
	sort_name :=
		# Remove "The", "A", and "And" at the beginning
		replace@(match: "^(The|An?) ", replace: "") +
		# Remove commas and apostrophes
		replace@(match: "(,|'|â€™)", replace: "") +
		# Remove bold and italic tags
		replace@(match: "(<b>|<i>|</b>|</i>)", replace: "") +
		# Make lowercase
		to_lower

set field:
	type: text
	name: set title
	identifying: true

set field:
	type: text
	name: description
	multi line: true

set field:
	type: text
	name: artist

set field:
	type: text
	name: copyright

set field:
	type: boolean
	name: automatic card numbers
	initial: no
	description: Should card numbers be shown on the cards?

card field:
	type: choice
	name: spellschool
	initial: abjuration
	choice:	abjuration
	choice:	abjurationritual
	choice:	conjuration
	choice:	conjurationritual
	choice:	divination
	choice:	divinationritual
	choice:	enchantment
	choice:	enchantmentritual
	choice:	evocation
	choice:	evocationritual
	choice:	illusion
	choice:	illusionritual
	choice:	necromancy
	choice:	necromancyritual
	choice: transmutation
	choice: transmutationritual

card field:
	type: choice
	name: concentration
	initial: no_concentration
	choice:	no_concentration
	choice:	concentration


card field:
	type: text
	name: spellname
	identifying: true
	show statistics: false
	card list visible: true
	card list column: 1
	card list width: 150
	description: The name of the spell

card field:
	type: text
	name: spelltext
	description: spell Text
	multi line: true

card field:
	type: text
	name: spelllevel
	description: spell Text

card field:
	type: text
	name: spellrange
	description: spell Text

card field:
	type: text
	name: spellcasttime
	description: spell Text

card field:
	type: text
	name: spellduration
	description: spell Text

card field:
	type: text
	name: spellcomponents
	description: spell Text	
	multi line: true

card field:
	type: text
	name: card number
	save value: false
	script:
		position(
			of: card
			in: set
			order_by: { sort_name(card.spellname) }
		) + 1
		+ "/" +
		number_of_items(in: set)
	card list visible: true
	card list column: 10
	card list width: 50
	card list name: #
	editable: false
	show statistics: false